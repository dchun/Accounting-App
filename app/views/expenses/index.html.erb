<h1>Listing expenses</h1>

<table id="expense" class="display">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.description %></td>
      <td><%= number_to_currency expense.amount %></td>
      <td><%= expense.date %></td>
      <td><%= expense.type %></td>
      <td><%= link_to 'Show', expense %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
  <thead>
    <tr>
     <th>Total</th>
   </tr>
 </thead>
 <tbody>
  <tr>
    <td><%= number_to_currency @expenses.inject(0) {|sum, hash| sum + hash[:amount]} %></td>
  </tr>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>
